{% if peopleItems %}
  <div class="people">
    <ol class="auto-grid">
      {% for item in peopleItems %}
        <li>
          <figure class="person | frame" data-frame="quarternary">
            <img src="{{ item.data.image }}"
                 alt="Image of {{ item.data.name }}"
                 class="person__image | radius"
                 draggable="false">
            <figcaption class="person__details | leading-tight">
              <span class="person__name | font-sans weight-bold">{{ item.data.name }}</span>
              <span class="person__title">{{ item.data.title }}</span>
            </figcaption>
          </figure>
        </li>
      {% endfor %}
    </ol>
  </div>
{% endif %}
