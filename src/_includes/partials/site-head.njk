<a href="#main-content" class="skip-link | button">Skip to content</a>
<header class="site-head" role="banner">
  <div class="wrapper">
    <div class="site-head__inner">
      <a href="/" class="site-head__brand" aria-label="{{ site.name }} - home">
        {% include "partials/brand.svg" %}
      </a>
      <nav class="nav | site-head__nav | font-sans" aria-label="Primary">
        <ul class="nav__list">
          {% for item in navigation.items %}
          <li>
            <a
              href="{{ item.url }}"
              {{
              helpers.getLinkActiveState(item.url,
              page.url)
              |
              safe
              }}
            >
              {{ item.text }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
</header>
